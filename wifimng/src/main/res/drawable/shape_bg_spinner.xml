<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size
                android:width="120dp"
                android:height="30dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
            <stroke
                android:width="1px"
                android:color="#ff222222" />
        </shape>
    </item>
    <item
        android:width="120dp"
        android:height="30dp"
        android:gravity="center_vertical|right">
        <bitmap android:src="@drawable/ic_spinner_drop_down" android:gravity="right" android:tileMode="disabled"/>
    </item>

</layer-list>
